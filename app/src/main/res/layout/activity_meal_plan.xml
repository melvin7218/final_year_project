<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <TextView
            android:id="@+id/text_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="TastyNote"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/menu_line_logo" />
    </RelativeLayout>

    <!-- Scrollable Content Area -->

    <!-- Footer -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:layout_below="@id/header"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="-1dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/weekSelectorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/weekSelectorSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center" />
            </LinearLayout>

            <!-- Day selection row -->
            <LinearLayout
                android:id="@+id/daySelectorContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonMon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mon" />

                <Button
                    android:id="@+id/buttonTue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tue" />

                <Button
                    android:id="@+id/buttonWed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wed" />

                <Button
                    android:id="@+id/buttonThu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu" />

                <Button
                    android:id="@+id/buttonFri"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fri" />

                <Button
                    android:id="@+id/buttonSat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sat" />

                <Button
                    android:id="@+id/buttonSun"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sun" />
            </LinearLayout>
            <!-- Recipe or Exercise Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/recipe_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/purple"
                    android:text="Recipe"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/exercise_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/light_blue"
                    android:text="Exercise"
                    android:textColor="@color/purple"
                    android:textSize="24dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Calories status below day selector -->
            <TextView
                android:id="@+id/calories_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories Remaining"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Calories today display container -->
            <FrameLayout
                android:id="@+id/caloriesTodayContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/weekMealPlanContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mealPlanRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/mealPlanContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <Button
                android:id="@+id/check_grocery_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_passthrough_state"
                android:backgroundTint="@color/primary_blue"
                android:text="Check Grocery List"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/nutrition_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_passthrough_state"
                android:backgroundTint="@color/primary_blue"
                android:text="Nutrition Analysis"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/footer_background">

        <!-- Icons like home, search, add, grocery, account -->
        <ImageView
            android:id="@+id/home_logo_footer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/home_logo" />

        <ImageView
            android:id="@+id/meal_plan"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/home_logo_footer"
            android:layout_marginStart="15dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/search_logo" />

        <ImageView
            android:id="@+id/search_logo"
            android:layout_width="wrap_content"
            android:layout_height="101dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/background_add" />

        <ImageView
            android:id="@+id/add_recipe_logo"
            android:layout_width="61dp"
            android:layout_height="46dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:onClick="onAddRecipeClick"
            android:src="@drawable/chef_hat_button" />

        <ImageView
            android:id="@+id/grocery_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="70dp"
            android:src="@drawable/grocery_list" />

        <ImageView
            android:id="@+id/account_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@+id/grocery_logo"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/account_setting_logo" />
    </RelativeLayout>

</RelativeLayout>

