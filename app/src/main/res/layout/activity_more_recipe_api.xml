<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    android:backgroundTint="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <include
                android:id="@+id/header"
                layout="@layout/activity_header" />

            <!-- Horizontal Cuisine Filter Buttons -->
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/new_recipe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_passthrough_state"
                        android:text="New"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        />

                    <Button
                        android:id="@+id/chineseButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_passthrough_state"
                        android:text="Chinese"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/malayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_passthrough_state"
                        android:text="Malay"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/indiaButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/button_passthrough_state"
                        android:text="India"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </LinearLayout>
            </HorizontalScrollView>


            <!-- Cuisine Recipe Container -->
            <LinearLayout
                android:id="@+id/cuisineContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/horizontalScrollView"
                android:padding="16dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/recipeImage"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder" />

                    <TextView
                        android:id="@+id/recipeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recipe Name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="5dp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <!-- Footer Navigation -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cuisineContainer">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/footer_background" />

                <ImageView
                    android:id="@+id/home_logo_footer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/home_logo"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="70dp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:srcCompat="@drawable/search_logo"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/home_logo_footer"/>

                <ImageView
                    android:id="@+id/search_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="101dp"
                    android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/background_add" />

                <ImageView
                    android:id="@+id/add_recipe_logo"
                    android:layout_width="61dp"
                    android:layout_height="46dp"
                    app:srcCompat="@drawable/chef_hat_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:onClick="onAddRecipeClick"/>

                <ImageView
                    android:id="@+id/grocery_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="230dp"
                    app:srcCompat="@drawable/grocery_list" />

                <ImageView
                    android:id="@+id/account_setting"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/account_setting_logo"
                    android:layout_toRightOf="@+id/grocery_logo"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="15dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
