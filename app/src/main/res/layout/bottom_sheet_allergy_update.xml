<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/title_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Update Allergy Ingredients"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_Common_Allergy_Ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Common Allergy Ingredient"
        android:layout_below="@+id/title_bottom_sheet"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <RelativeLayout
        android:id="@+id/layout_common_allergy_ingredient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_Common_Allergy_Ingredient"
        >
    <CheckBox
        android:id="@+id/allergy_ingredient1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Peanuts"
        android:layout_marginLeft="10dp"/>

        <CheckBox
            android:id="@+id/allergy_ingredient2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="EGG"
            android:layout_centerHorizontal="true"/>

        <CheckBox
            android:id="@+id/allergy_ingredient3"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="ShellFish"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:id="@+id/allergy_ingredient4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Tree Nuts"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/allergy_ingredient1"/>

        <CheckBox
            android:id="@+id/allergy_ingredient5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Soys"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/allergy_ingredient2"/>

        <CheckBox
            android:id="@+id/allergy_ingredient6"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Dairy"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_below="@id/allergy_ingredient3"
            />

        <CheckBox
            android:id="@+id/allergy_ingredient7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Wheat"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/allergy_ingredient4"/>

        <CheckBox
            android:id="@+id/allergy_ingredient8"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Sesame Seeds"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/allergy_ingredient5"/>

        <CheckBox
            android:id="@+id/allergy_ingredient9"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Fish"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_below="@id/allergy_ingredient6"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_other_allergy_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_common_allergy_ingredient"
        android:text="Other Allergy Ingredient"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/textField_other_allergy_ingredient"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_other_allergy_ingredient"
        android:hint="like nuts"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/cancel_allergy_setting"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/textField_other_allergy_ingredient"
        android:layout_centerHorizontal="true"
        android:text="Cancel"/>

    <Button
        android:id="@+id/confirm_allergy_setting"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/cancel_allergy_setting"
        android:layout_centerHorizontal="true"
        android:background="@color/DarkRed"
        android:text="Save"
        android:textColor="@color/white"/>
</RelativeLayout>
