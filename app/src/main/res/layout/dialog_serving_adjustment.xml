<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Recipe Name -->
    <TextView
        android:id="@+id/recipeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recipe Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- Original Servings -->
    <TextView
        android:id="@+id/originalServings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Original Servings: 2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp" />

    <!-- Serving Selection Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Number of Servings:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- Serving Spinner -->
    <Spinner
        android:id="@+id/servingSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_passthrough_state"
        android:padding="12dp" />

    <!-- Nutrition Information -->
    <TextView
        android:id="@+id/nutritionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition information will appear here..."
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@drawable/calories_today_background"
        android:padding="12dp"
        android:textColorHint="@color/white" />

</LinearLayout> 