<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:nestedScrollingEnabled="false"
    app:layout_scrollEffect="none"
    tools:context=".LoginPage">

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="237dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-55dp"
        android:background="@drawable/roundstyle"
        android:hint="user name"
        android:inputType="text" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="237dp"
        android:layout_height="55dp"
        android:layout_below="@id/etUsername"
        android:layout_centerInParent="true"
        android:layout_marginLeft="101dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/roundstyle"
        android:hint="*******"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/button_forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_signUp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/text_ForgotPassword"
        android:text="Forgot Password"
        android:textColor="@color/DarkBlue" />

    <TextView
        android:id="@+id/text_skip_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:text="Skip to Main"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_alignRight="@+id/etPassword"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_passthrough_state"
        android:text="Login"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:iconTintMode="add"
        android:backgroundTint="@color/DarkBlue"/>

    <Button
        android:id="@+id/button_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPassword"
        android:layout_alignLeft="@+id/etPassword"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_passthrough_state"
        android:backgroundTint="@color/DarkRed"
        android:text="Sign Up"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:iconTintMode="add" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        app:srcCompat="@drawable/logo"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/text_ForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password ?"
        android:layout_below="@id/button_signUp"
        android:layout_alignStart="@+id/button_signUp"
        android:layout_marginTop="20dp"/>





</RelativeLayout>