<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background">

            <ImageView
                android:id="@+id/picture_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle_background"
                android:clickable="true"
                android:src="@drawable/return_logo" />


            <!-- Profile Picture -->
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/account_default_image"
                android:contentDescription="Profile Image"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_background" />

            <!-- Change Profile Picture Button -->
            <Button
                android:id="@+id/change_profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Picture"
                android:layout_below="@id/profile_image"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/change_profile_picture"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textfield_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Username"
                android:layout_below="@+id/text_name"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/textfield_name"
                android:layout_margin="10dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textfield_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="abc123@gmail.com"
                android:layout_below="@+id/text_email"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/black"/>
















            
        </RelativeLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>