<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ingredient_item">

    <EditText
        android:id="@+id/item_ingredientAmount"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:hint="Amount"
        android:inputType="text"
        />


    <EditText
        android:id="@+id/item_ingredientName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/item_ingredientAmount"
        android:layout_marginStart="10dp"
        android:hint="Ingredient Name"
        android:inputType="text"
        />

    <ImageView
        android:id="@+id/item_ingredientDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/item_ingredientName"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/dustbin_logo"
        android:contentDescription="Delete ingredient"/>
</RelativeLayout>